# Firebase Configuration for IntelliQuest - Production Deployment Template
# Copy this file to .env.production and replace with your actual values

# Firebase Configuration (Replace with your project values)
export NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_FIREBASE_API_KEY"
export NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
export NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
export NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.firebasestorage.app"
export NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_SENDER_ID"
export NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"
export NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="YOUR_MEASUREMENT_ID"

# Google Cloud Configuration for Vertex AI
export GOOGLE_CLOUD_PROJECT_ID="YOUR_PROJECT_ID"
export GOOGLE_CLOUD_LOCATION="global"
export GOOGLE_CLOUD_MODEL="gemini-2.5-flash"

# Cloud Run Configuration (Optional - defaults will be used if not set)
export CLOUD_RUN_SERVICE_NAME="intelliquest-app"
export CLOUD_RUN_REGION="asia-northeast1"

# Application Configuration
export NEXT_PUBLIC_APP_NAME="IntelliQuest"
export NEXT_PUBLIC_APP_VERSION="1.0.0"
export NEXT_PUBLIC_USE_FIREBASE_EMULATORS="false"

# Usage Instructions:
# 1. Copy this file: cp .env.production.template .env.production
# 2. Replace all "YOUR_*" placeholders with your actual values
# 3. Load the environment: source .env.production
# 4. Run deployment: ./deploy.sh 